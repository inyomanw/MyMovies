<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

    <ImageView
            android:id="@+id/imv_poster"
            android:layout_width="190dp"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imv_poster"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="15sp"
            app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
            android:id="@+id/imv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintLeft_toLeftOf="@id/tv_title"
            android:src="@drawable/ic_star_24dp"/>
    <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.4"
            app:layout_constraintTop_toTopOf="@id/imv_star"
            app:layout_constraintBottom_toBottomOf="@id/imv_star"
            app:layout_constraintLeft_toRightOf="@id/imv_star"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/roboto_regular"/>
    <ImageView
            android:id="@+id/imv_count_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/imv_star"
            app:layout_constraintLeft_toRightOf="@id/tv_rating"
            android:src="@drawable/ic_account"
            android:layout_marginLeft="8dp"/>

    <TextView
            android:id="@+id/tv_count_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/imv_star"
            app:layout_constraintBottom_toBottomOf="@id/imv_count_rate"
            app:layout_constraintLeft_toRightOf="@id/imv_count_rate"
            android:layout_marginLeft="4dp"
            android:text="14.000"
            android:fontFamily="@font/roboto_regular"/>

    <TextView
            android:id="@+id/tv_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imv_star"
            app:layout_constraintLeft_toRightOf="@id/imv_poster"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/imv_poster"/>

</android.support.constraint.ConstraintLayout>