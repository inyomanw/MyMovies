<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">
    <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
                android:id="@+id/imv_image"
                android:layout_width="210dp"
                android:layout_height="270dp"/>
    </android.support.v7.widget.CardView>

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card"
            app:layout_constraintLeft_toLeftOf="@id/card"
            app:layout_constraintRight_toRightOf="@id/card"
            android:textSize="18sp"
            android:text="title"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="16dp"/>
    <ImageView
            android:id="@+id/imv_star"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintLeft_toLeftOf="@id/tv_title"
            android:src="@drawable/ic_star_24dp"
            />
    <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/imv_star"
            app:layout_constraintBottom_toBottomOf="@id/imv_star"
            app:layout_constraintLeft_toRightOf="@id/imv_star"
            android:text="4.5"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="4dp"/>

</android.support.constraint.ConstraintLayout>